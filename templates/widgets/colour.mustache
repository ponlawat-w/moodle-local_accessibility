{{!
    @template local_accessibility/widgets/colour

    Default content for colour widgets

    Context variables required for this template:
    * name - full name of the widget plugin
    * value - default value

    Example context (json):
    {
        "name": "accessibility_backgroundcolour",
        "value": ""
    }
}}
<div class="container" id="{{name}}-container">
    <input type="color" name="color" value="{{value}}" />
    <button type="button" class="btn btn-light {{name}}-resetbtn">
        {{#str}} reset, local_accessibility {{/str}}
    </button>
</div>
