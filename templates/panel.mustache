{{!
    @template local_accessibility/panel

    Accessibility panel

    Context variables required for this template:
    * resetallurl - URL to resetall.php
    * widgets - widget object

    Example context (json):
    {
        "resetallurl": "https://my.moodle/local/accessibility/resetall.php?returnurl=...",
        "widgets": [
            {
                "class": "col-6",
                "name": "widgetnamewithoutprefix",
                "title": "Widget Name",
                "content": "<div></div>"
            }
        ]
    }
}}
<div class="local-accessibility-panel border-primary p-0 card col-10 col-lg-8">
    <div class="card-header bg-primary text-light">
        <i class="fa fa-universal-access"></i>
        {{#str}} pluginname, local_accessibility {{/str}}
        <a href="javascript:void(0);" id="local-accessibility-closebtn" class="float-right text-light text-decoration-none">
            <i class="fa fa-times"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="container-fluid text-right mb-2">
                    <a href="{{resetallurl}}" class="btn btn-secondary">
                        {{#str}} resetall, local_accessibility {{/str}}
                    </a>
                </div>
            </div>
            <div class="row">
                {{#widgets}}
                    <div class="{{class}} card">
                        <div class="card-body {{name}}-container">
                            <p>
                                <strong>
                                    {{#hasicon}}{{#pix}} icon, accessibility_{{name}}, {{title}} {{/pix}}{{/hasicon}}
                                    {{title}}
                                </strong>
                            </p>
                            {{{content}}}
                        </div>
                    </div>
                {{/widgets}}
            </div>
        </div>
    </div>
</div>
